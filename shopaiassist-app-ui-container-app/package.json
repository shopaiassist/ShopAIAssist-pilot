{
  "name": "Container",
  "version": "1.2.0",
  "description": "ShopAIAssist 2.0",
  "main": "server/index.ts",
  "engines": {
    "node": ">=20.13.x <21",
    "npm": ">=10.5.x"
  },
  "scripts": {
    "build": "cd client && npm run build && cd ..",
    "clean": "rm -rf node_modules && cd client && npm run clean && cd .. && rm -rf coverage && rm -rf .nyc_output",
    "heroku-postbuild": "cd client && npm run heroku-postbuild && cd ..",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "npm run lint -- --max-warnings 0",
    "postinstall": "cd client && npm install && cd ..",
    "prettier": "prettier \"**/*.{ts,tsx,js}\" --write --log-level warn",
    "prettier:ci": "prettier \"**/*.{ts,tsx,js}\" --check",
    "setup": "npm config set engine-strict true && husky install && cd client && npx playwright install && cd ..",
    "start:client": "cd client && npm start",
    "start:server": "nodemon -e ts --watch server --exec \"node -r ts-node/register server/index.ts\"",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:prod": "node -r ts-node/register server/index.ts",
    "storybook": "cd client && npm run storybook && cd ..",
    "test:client": "cd client && npm test && cd ..",
    "test:client:ci": "cd client && npm run test:ci && cd ..",
    "test:server:run": "nyc mocha -r ts-node/register 'server/src/**/*.spec.ts'",
    "test:server": "nyc npm run test:server:run",
    "test:server:ci": "npm run test:server:run -- --forbid-only --bail --reporter min",
    "test:storybook": "cd client && npm run test:storybook && cd ..",
    "test": "npm run test:server && npm run test:client",
    "test:ci": "npm run test:server:ci && npm run test:client:ci"
  },
  "keywords": [],
  "license": "UNLICENSED",
  "dependencies": {
    "@dotenvx/dotenvx": "~1.48.3",
    "@segment/analytics-node": "~2.3.0",
    "@storybook/addon-styling-webpack": "^1.0.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/flat": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.4",
    "axios": "1.11.0",
    "compression": "~1.8.1",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "~1.4.7",
    "cookie-storage": "^6.1.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.2",
    "express": "~4.21.1",
    "express-promise-router": "^4.1.1",
    "express-session": "~1.18.2",
    "flat": "^5.0.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.6.1",
    "nocache": "^4.0.0",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.72.0",
    "sass-loader": "^14.1.1",
    "ts-node": "10.9.2",
    "typescript": "^5.3.3",
    "typescript-chained-error": "^1.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/chai-http": "^4.2.0",
    "@types/chai-spies": "^1.0.6",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "ts-node": "10.9.2",
    "chai": "^4.4.1",
    "chai-http": "^4.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-use-encapsulation": "^1.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "mocha": "^10.2.0",
    "nock": "^13.5.4",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "prettier": "^3.2.2",
    "pretty-quick": "^4.0.0",
    "sinon": "^17.0.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.2"
  },
  "nyc": {
    "include": [
      "server/src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*spec.ts",
      "**/*test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}
