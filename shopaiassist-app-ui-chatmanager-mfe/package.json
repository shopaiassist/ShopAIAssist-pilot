{
  "name": "chatmanager-mfe",
  "version": "1.2.0",
  "description": "Matters MFE",
  "main": "server/index.ts",
  "engines": {
    "node": ">=20.13.x <21",
    "npm": ">=10.5.x"
  },
  "scripts": {
    "build": "cd client && npm run build && cd ..",
    "clean": "rm -rf node_modules && cd client && npm run clean && cd ..",
    "dev:precommit": "npm run build && cd client && npm run dev:precommit && cd .. && npm run test:server",
    "heroku-postbuild": "cd client && npm run heroku-postbuild && cd ..",
    "lint": "eslint .",
    "lint:ci": "npm run lint -- --max-warnings 0",
    "postinstall": "echo \"Installing client dependencies...\" && cd client && npm install && cd ..",
    "prettier": "prettier \"**/*.{ts,tsx,js}\" --write --log-level warn",
    "prettier:ci": "prettier \"**/*.{ts,tsx,js}\" --check",
    "setup": "npm config set engine-strict true && husky install && cd client && npx playwright install && cd ..",
    "start:client": "cd client && npm start",
    "start:server": "nodemon -e ts --watch server --exec \"node -r ts-node/register server/index.ts\"",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:prod": "node -r ts-node/register server/index.ts",
    "storybook": "cd client && npm run storybook && cd ..",
    "test:client": "cd client && npm test && cd ..",
    "test:client:ci": "cd client && npm run test:ci && cd ..",
    "test:client:windows": "cd client && npm run test:windows && cd ..",
    "test:server:run": "nyc mocha -r dotenv/config -r ts-node/register 'server/src/**/*.spec.ts'",
    "test:server": "nyc npm run test:server:run",
    "test:server:ci": "npm run test:server:run -- --forbid-only --bail --reporter min",
    "test:storybook": "cd client && npm run test:storybook && cd ..",
    "test": "npm run test:server && npm run test:client",
    "test:windows": "npm run test:server && npm run test:client:windows",
    "test:ci": "npm run test:server:ci && npm run test:client:ci"
  },
  "keywords": [],
  "license": "UNLICENSED",
  "dependencies": {
    "@storybook/addon-styling-webpack": "^1.0.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.4",
    "@types/uuid": "^9.0.8",
    "classnames": "^2.5.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.2",
    "express": "~4.21.1",
    "express-http-proxy": "^2.0.0",
    "express-promise-router": "^4.1.1",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "mongoose": "~8.9.5",
    "nocache": "^4.0.0",
    "node-fetch": "^3.3.2",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.72.0",
    "sass-loader": "^14.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-chained-error": "^1.6.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.17",
    "@types/express-http-proxy": "^1.6.6",
    "@types/fetch-mock": "^7.3.8",
    "@types/lodash": "^4.17.0",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "chai": "^4.4.1",
    "chai-http": "^4.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-use-encapsulation": "^1.1.0",
    "fetch-mock": "^10.0.7",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "mongodb-memory-server": "^9.2.0",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "prettier": "^3.2.2",
    "sinon": "^17.0.1",
    "source-map-support": "^0.5.21"
  },
  "nyc": {
    "include": [
      "server/src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*spec.ts",
      "**/*test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}
